{
    "manifestVersion": 1.0,
    "id": "create-child-tasks",
    "version": "0.1.7",
    "name": "Create Child Tasks",
    "description": "Add pre-defined task templates to a work item with a single click.",
    "public": false,
    "publisher": "wilksmatt",
    "repository": {
        "type": "git",
        "uri": "https://github.com/wilksmatt/1-click-child-links"
    },
    "icons": {
        "default": "img/create-child-tasks-logo-128x128.png"
    },
    "screenshots": [
        {
            "path": "img/screen01.png"
        },
        {
            "path": "img/screen02.png"
        },
        {
            "path": "img/screen03.png"
        }
    ],
    "tags": [
        "Tasks"
    ],
    "categories": [
        "Azure Boards"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "scopes": [
        "vso.work",
        "vso.work_write"
    ],
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "toolbar.html",
            "addressable": true
        },
        {
            "path": "scripts/app.js",
            "addressable": true
        },
        {
            "path": "lib/VSS.SDK.min.js",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "create-child-task-work-item-button",
            "type": "ms.vss-web.action",
            "description": "Create Child Tasks",
            "targets": [
                "ms.vss-work-web.work-item-toolbar-menu", 
                "ms.vss-work-web.backlog-item-menu",
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "text": "Create Child Tasks",
                "title": "Create Child Tasks",
                "toolbarText": "Create Child Tasks",                
                "icon": {
                    "light": "img/create-child-tasks-icon-light-16x16.png",
                    "dark": "img/create-child-tasks-icon-dark-16x16.png"
                },
                "uri": "toolbar.html",
                "registeredObjectId": "create-child-task-work-item-button"
            }
        }
    ]
}